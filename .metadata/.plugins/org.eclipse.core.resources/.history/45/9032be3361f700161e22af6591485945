#ifndef DONATION_H_
#define DONATION_H_

#pragma once
#include <sstream>

class Donation {
	std::string name;
	int amount;
public:
	Donation(std::string name, int amount) : name(name), amount(amount) {}
	virtual ~Donation();

	void showData();
};

std::ostream & operator <<(std::ostream & os, const Donation & ts);
std::istream & operator >>(std::istream & os, const Donation & ts);

void Donation::showData() {
	std::cout << "Name: " << this->name << "\t$" << this->amount << std::endl;
}

#endif /* DONATION_H_ */
