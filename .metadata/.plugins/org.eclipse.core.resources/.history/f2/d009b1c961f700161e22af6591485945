#ifndef DONATION_H_
#define DONATION_H_

#pragma once
#include <sstream>

class Donation {
	std::string name;
	int amount;
public:
	Donation(std::string dName, int dAmount);
	virtual ~Donation();

	//void showData();
};

std::ostream & operator <<(std::ostream & os, const Donation & ts);
std::istream & operator >>(std::istream & os, const Donation & ts);

Donation::Donation(std::string dName, int dAmount) {
	this->name = dName;
	this->amount = dAmount;
}

